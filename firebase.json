{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "polymer.json",
      "firebase.json",
      "**/node_modules/**",
      "**/test/**",
      "*.log",
      ".gitignore",
      ".firebaserc",
      ".bower.json",
      ".database.rules.json"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
